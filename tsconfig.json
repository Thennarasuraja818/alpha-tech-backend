{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/types/**/*.d.ts",
    "api/**/*",
    "app/**/*",
    "infrastructure/**/*",
    "domain/**/*",
    "index.ts"
  ]
}
